<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|fill_vertical|right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="horizontal|vertical"
    tools:context="freakr.streams.apps.MainActivity$ListFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" >

        <TextView
            android:id="@+id/Head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:divider="#FFCC00"
            android:dividerHeight="2dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rBOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:text="Online" />

    </LinearLayout>

    <TextView
        android:id="@+id/tVTage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:gravity="center"
        android:text="@string/serie" />

    <Spinner
        android:id="@+id/sTage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="right"
        android:textAlignment="gravity"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <TextView
        android:id="@+id/tVZeit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:gravity="center"
        android:text="Staffel" />

    <Spinner
        android:id="@+id/sStaffel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="right"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <TextView
        android:id="@+id/tVFenster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:gravity="center"
        android:text="Episode" />

    <Spinner
        android:id="@+id/sFenster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="right"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <CheckBox
        android:id="@+id/cBVorhanden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Vorhanden" />

    <CheckBox
        android:id="@+id/cBGesehen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Gesehen" />

    <Button
        android:id="@+id/bLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="Link" />

</LinearLayout>